<html lang="en">  
<head>  
    <meta charset="UTF-8">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
    <meta http-equiv="X-UA-Compatible" content="ie=edge">  
    <meta http-equiv="Pragma" content="no-cache" />
<meta http-equiv="Expires" content="-1" />
    <title>SA BROKING</title>  
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">  
    <style>

    </style>
  </head>  

<body>  
  <a href="/admin/dashboard"><button class="btn btn-success" type="button" style="margin-left: 10;margin-top: 10;">Back</button></a>
  <center><h2 class="display-4" style="margin-top: 10;">Upload Files</h2></center>
      
    <br>
    <br>
    <center>
    <form action="/admin/<%= user._id %> " method="POST" enctype="multipart/form-data">
        
        <input type="file" name="file" id="file" class="" multiple>
        <br>
        <br>
        <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
      </form>
    </center>
      <br>
      <br>  
   <h3 class="display-4" style="margin-left: 10; margin-bottom: 30;">Files</h3>
       <table class="table">  
           <tbody>  
            <% for(var i=0; i < user.file_path.length > 0; i++) {%>  
                <tr>  
                    <td>
                      <h5><%= user.file_path[i] %></h5>  
                    </td>
                    <td>  
                     <form method="GET" action="/download/<%= user.file_path[i] %> ">
                       <button type="submit" name="download" class="btn btn-secondary">Download</button>
                     </form>
                     </td>
                     <td>
                     <form method="GET" action="/delete/<%= user.file_path[i] %> ">
                      <input type="hidden" name="userId" value="<%= user._id %>"/>
                      <button type="submit" name="download" class="btn btn-danger">Delete</button>
                    </form>
                    </td>  
                </tr>  
               <% } %>  
           </tbody>  
       </table>  
       <script>
          window.addEventListener( "pageshow", function ( event ) {
  var historyTraversal = event.persisted || 
                         ( typeof window.performance != "undefined" && 
                              window.performance.navigation.type === 2 );
  if ( historyTraversal ) {
    window.location.reload();
  }
});
       </script>
</body>  
</html> 